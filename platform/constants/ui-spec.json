{
  "integration_type_id": "tailscale_account",
  "integration_name": "Tailscale Account",
  "help_text_md": "Tailscale ",
  "platform_documentation": "https://tailscale.com/api",
  "provider_documentation": "https://tailscale.com",
  "icon": "tailsclae.svg",
  "discover": {
    "credentials": [
      {
        "type": "token",
        "label": "Access Token",
        "priority": 1,
        "fields": [
          {
            "name": "token",
            "label": "Access Token",
            "inputType": "password",
            "required": true,
            "order": 1,
            "validation": {
              "pattern": "^[a-zA-Z0-9+_/-]{0,200}$",
              "errorMessage": "Access token must be at last 100-character alphanumeric string."
            },
            "info": "Your Heroku Token with appropriate scopes.",
            "external_help_url": "https://tailscale.com/kb/1215/oauth-clients"
          }
        ]
      }
    ],
    "integrations": [
    ]
  },
  "render": {
    "credentials": {
      "defaultPageSize": 10,
      "fields": [
        {
          "name": "id",
          "label": "ID",
          "fieldType": "text",
          "order": 1,
          "sortable": true,
          "filterable": true,
          "info": "ID.",
          "detail": false,
          "show": true,
          "detail_order": 1
        },
        {
          "name": "description",
          "label": "Description",
          "fieldType": "text",
          "order": 2,
          "sortable": true,
          "filterable": true,
          "show": true,
          "info": "Description of the credential.",
          "detail": true,
          "detail_order": 2
        },
        {
          "name": "updated_at",
          "label": "Updated At",
          "fieldType": "date",
          "order": 3,
          "sortable": true,
          "filterable": true,
          "show": true,
          "info": "Timestamp when the credential was last updated.",
          "detail": false,
          "detail_order": 3
        },
        {
          "name": "integration_count",
          "label": "Integration Count",
          "fieldType": "text",
          "order": 4,
          "sortable": true,
          "filterable": true,
          "show": true,
          "info": "Number of active integrations using this credential.",
          "detail": true,
          "detail_order": 4
        },
        {
          "name": "credential_type",
          "label": "Credential Type",
          "fieldType": "text",
          "order": 5,
          "show": false,
          "info": "Type of Credential used (Access Token).",
          "valueMap": {
            "token": "Access Token"
          },
          "detail": true,
          "detail_order": 5
        }
      ]
    },
    "integrations": {
      "defaultPageSize": 15,
      "fields": [
        {
          "name": "name",
          "label": "Name",
          "fieldType": "text",
          "order": 1,
          "sortable": true,
          "filterable": true,
          "info": "Name.",
          "detail": true,
          "detail_order": 1
        },
        {
          "name": "provider_id",
          "label": "Provider ID",
          "fieldType": "text",
          "order": 2,
          "sortable": true,
          "filterable": true,
          "info": "Provider ID.",
          "detail": true,
          "detail_order": 2
        },
        {
          "name": "credential_id",
          "label": "Credential ID",
          "fieldType": "text",
          "order": 3,
          "sortable": true,
          "filterable": true,
          "info": "Credential ID.",
          "detail": true,
          "detail_order": 3
        },

        {
          "name": "state",
          "label": "State",
          "fieldType": "status",
          "order": 4,
          "sortable": true,
          "filterable": true,
          "detail": true,
          "detail_order": 4,
          "info": "Current state of the Tailscale Account integration.",
          "statusOptions": [
            {
              "value": "ACTIVE",
              "label": "Active",
              "color": "green"
            },
            {
              "value": "INACTIVE",
              "label": "Inactive",
              "color": "red"
            },
            {
              "value": "ARCHIVED",
              "label": "Pending",
              "color": "blue"
            }
          ]
        },
        {
          "name": "last_check",
          "label": "Last Check",
          "fieldType": "date",
          "order": 5,
          "sortable": true,
          "filterable": true,
          "info": "Timestamp when the integration was last checked.",
          "detail": true,
          "detail_order": 5
        }
      ]
    }
  },
  "actions": {
    "credentials": [
      {
        "type": "view",
        "label": "View"
      },
      {
        "type": "update",
        "label": "Update",
        "editableFields": ["token"]
      },
      {
        "type": "delete",
        "label": "Delete",
        "confirm": {
          "message": "Are you sure you want to delete this credential? This action cannot be undone.",
          "condition": {
            "field": "integration_count",
            "operator": "==",
            "value": 0,
            "errorMessage": "Credential cannot be deleted because it is used by active integrations."
          }
        }
      }
    ],
    "integrations": [
      {
        "type": "view",
        "label": "View"
      },
      {
        "type": "delete",
        "label": "Delete",
        "confirm": {
          "message": "Are you sure you want to delete this integration? This action cannot be undone."
        }
      },
      {
        "type": "health_check",
        "label": "Health Check",
        "tooltip": "Run a health check on the integration to verify connectivity and configuration."
      }
    ]
  }
}
